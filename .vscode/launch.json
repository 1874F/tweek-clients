  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "attach",
      "name": "Attach to Process",
      "port": 5858,
      "sourceMaps": true,
      "outFiles": [
        "${workspaceRoot}/js/tweek-repo/dist/**/*.js"
      ]
    },
    {
      "type": "node",
      "request": "launch",
      "name": "JS Repo test",
      "program": "${workspaceRoot}\\js\\repo\\node_modules\\mocha\\bin\\_mocha",
      "cwd": "${workspaceRoot}\\js\\repo\\",
      "args": [
        "--compilers",
        "ts:ts-node/register"
      ],
      "outFiles": [],
      "sourceMaps": true
    }
  ]
}